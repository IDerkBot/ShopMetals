<Window
    x:Class="ShopMetals.Views.Windows.ReportWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShopMetals.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="ReportWindow"
    Width="300"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Margin="10">
        <DatePicker
            Name="DpStart"
            md:HintAssist.Hint="Дата начала"
            md:HintAssist.IsFloating="True" />
        <DatePicker
            Name="DpEnd"
            md:HintAssist.Hint="Дата окончания"
            md:HintAssist.IsFloating="True" />
        <Button
            Name="BtnDo"
            Margin="0,5"
            Click="BtnDo_OnClick"
            Content="Сформировать" />

        <TextBlock Name="TblCount" />
        <TextBlock Name="TblSum" />
    </StackPanel>
</Window>
